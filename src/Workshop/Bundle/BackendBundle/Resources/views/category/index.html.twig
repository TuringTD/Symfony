{%extends "WorkshopBackendBundle:Layout:bootstrapLayout.html.twig"%}

{% block main %}
    <h1>分类管理</h1>
    <ul class="list list-inline">
        <li>
            <a href="{{ path('category_new') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-plus-sign"></i>添加
            </a>
        </li>
    </ul>
    <table class="records_list table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'Id', 'c.id') }}</th>
            <th>{{ knp_pagination_sortable(pagination, '名称', 'c.name') }}</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <ul class="list list-inline">
                        <li>
                            <a href="{{ path('category_show', { 'id': entity.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-eye-open"></i> 查看</a>
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': entity.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> 编辑</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination, "KnpPaginatorBundle:Pagination:twitter_bootstrap_v3_pagination.html.twig") }}
{% endblock %}
