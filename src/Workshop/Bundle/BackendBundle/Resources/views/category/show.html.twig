{%extends "WorkshopBackendBundle:Layout:bootstrapLayout.html.twig"%}

{% block main %}
    <h1>查看分类</h1>
    <ul class="record_actions list list-inline">
        <li>
            <a href="{{ path('category') }}" class="btn btn-link">
                分类管理
            </a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-default">
                <i class="glyphicon glyphicon-edit"></i> 编辑
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

    <table class="record_properties table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>名称</th>
          <td>{{ category.name }}</td>
        </tr>
        </tbody>
    </table>


{% endblock %}
