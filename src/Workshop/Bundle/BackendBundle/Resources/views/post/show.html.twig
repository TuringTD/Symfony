{%extends "WorkshopBackendBundle:Layout:bootstrapLayout.html.twig"%}

{%block main%}
    <h1>查看文章</h1>
    <ul class="record_actions list list-inline">
        <li>
            <a href="{{ path('post') }}" class="btn btn-link">文章管理</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-default">
                <i class="glyphicon glyphicon-edit"></i> 编辑
            </a>
        </li>

        {#<li>#}
            {#{{ form_start(delete_form) }}#}
            {#<input type="submit" value="删除">#}
            {#{{ form_end(delete_form) }}#}
        {#</li>#}
    </ul>
    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>标题</th>
                <td>{{ post.subject }}</td>
            </tr>
            <tr>
                <th>内容</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>创建时间</th>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>修改</th>
                <td>{% if post.updatedAt %}{{ post.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}
